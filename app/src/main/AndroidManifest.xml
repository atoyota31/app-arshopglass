<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tryonapp">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".contact_us.ContactUsActivity"
            android:exported="false" />
        <activity
            android:name=".about_us.AboutUsActivity"
            android:exported="false" />
        <activity
            android:name=".product_details.ProductDetails"
            android:exported="false" />
        <activity
            android:name=".product_view.ProductView"
            android:exported="false" />
        <activity
            android:name=".cart.CartItemActivity"
            android:exported="false" />
        <activity
            android:name=".cart.CartActivity"
            android:exported="false" />
        <activity
            android:name=".form.FormOrder"
            android:exported="false" />
        <activity
            android:name=".ar_glass.GlassesActivity"
            android:exported="false" />
        <activity android:name=".products.ProductCatalog">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />
    </application>

</manifest>