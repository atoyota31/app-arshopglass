<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contact_us.ContactUsActivity">

    <include layout="@layout/action_bar2"/>

    <TextView
        android:id="@+id/about_title"
        android:layout_below="@+id/action_bar2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="CONTACT US"
        android:textAlignment="center"
        android:textColor="#EE03FF"
        android:textSize="20dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/about_title"
        android:padding="20dp"
        >

        <ImageView
            android:id="@+id/about_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/magic_pink_lip_gloss" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_image"
            android:layout_marginTop="50dp"
            android:textSize="12dp"
            android:text="Bonjour, Sophienistas!\nWe want to hear from you! Reach out to us through any of the channels below.
\n\nEmail: sophieparisforever@gmail.com
\n\nYou can text at: +639197865867
\nLines open from 8:00 am - 5:00 pm (Monday - Saturday)
\n\nCorporate Office Address:
\nSacred Heart Avenue, Digos City
\nDavao del Sur, Philippines"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textSize="12dp"
            android:text="All of the information used on this app are for research \npurposes ONLY!"
            />

    </RelativeLayout>

</RelativeLayout>